<div class="jumbotron">
  <div class="row">
    <div class="container">
      <h3 class="text-right">Welcome Back, {{user.firstName}}</h3>
    </div>
  </div>
  <div class="row">
    <div class="container">
      <h1 class="display-4 text-center bold">
        <strong>Job Tracker</strong>
      </h1>
    </div>
  </div>
</div>
<div>
  <a class="navbar-brand" href="/logout">
    Logout
  </a>
</div>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="card">
      <div class="card-body row">
        <div class="col-sm-8">
          <h3 class="card-title">Open Applications: {{numberOpen}}</h3>
          <h3 class="card-title">Completed Applications: {{numberComplete}}</h3>
        </div>
        <div class="col-sm-4">
          <button type="submit" class="btn btn-success">
            <a href="/new">Add A New Application</a>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="app-table">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Company Name</th>
        <th scope="col">Job Title</th>
        <th scope="col">Technologies Required</th>
        <th scope="col">Location</th>
        <th scope="col">Cover Letter & Resume Submitted</th>
        <th scope="col">Interview Scheduled</th>
        <th scope="col">Date</th>
        <th scope="col">Interviewer's Name</th>
        <th scope="col">Thanks You Sent</th>
        <th scope="col">Feedback from Organization</th>
      </tr>
    </thead>
    <tbody>
      <div  id="tableRow"></div>
    </tbody>
  </table>
</div>
